{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": "./resources",
        "outDir": "./public/dist",
        "paths": {
            "@images": ["images"],
            "@scripts": ["scripts"],
            "@styles": ["styles"]
        },
        "types": [
            "node",
            "vite/client"
        ]
    },
    "include": [ "resources" ],
    "exclude": [ "node_modules" ]
}
